<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text4"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#F44336"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="4"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_toStartOf="@+id/text4"
        android:layout_above="@id/text4"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#E91E63"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="3"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_toStartOf="@+id/text3"
        android:layout_above="@id/text3"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#871038"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_toStartOf="@+id/text2"
        android:layout_above="@id/text2"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#673AB7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/text5"
        android:layout_toStartOf="@+id/text4"
        android:layout_below="@id/text4"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#FFEB3B"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="5"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/text6"
        android:layout_toStartOf="@+id/text5"
        android:layout_below="@id/text5"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#03A9F4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="6"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/text7"
        android:layout_toStartOf="@+id/text6"
        android:layout_below="@id/text6"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:background="#FF5722"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="7"
        android:textSize="50sp"/>
</RelativeLayout>
